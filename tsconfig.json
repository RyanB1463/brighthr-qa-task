{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "types": [
            "node"
        ],
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "skipLibCheck": true
    },
    "include": [
        "tests",
        "pages",
        "utils",
        "playwright.config.ts"
    ]
}